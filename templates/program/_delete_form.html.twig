{% if is_granted("program_delete") %}
	<form method="post" class="d-inline ml-2 mt-3" action="{{ path('program_delete', {'id': program.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
		<button class="btn btn-danger">Delete</button>
	</form>
{% endif %}
