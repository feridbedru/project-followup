{% extends 'base.html.twig' %}

{% block title %}Edit Program
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('program_index')}}">{% trans %}
			Program
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Edit
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Edit Program{% endtrans %}
{% endblock %}
{% block body %}
	{% if is_granted("program_edit") %}
		<div class="card card-info">
			<div class="card-header">
				<h3>{% trans %}
					Edit Program
					{% endtrans %}</h3>
			</div>
			<div class="card-body">
				{{ include('program/_form.html.twig', {'button_label': 'Update' }) }}
				{{ include('program/_delete_form.html.twig') }}
			</div>
		</div>
		<br>
	{% endif %}
{% endblock %}
