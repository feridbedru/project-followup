{% extends 'base.html.twig' %}

{% block title %}Program
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('program_index')}}">{% trans %}
			Program
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Show
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Show Program
	{% endtrans %}
{% endblock %}
{% block body %}
	{% if is_granted("program_show") %}
		<div class="card card-info">
			<div class="card-header">
				<h5>{% trans %}
					Show Program
					{% endtrans %}</h5>
			</div>
			<div class="card-body">
				<table class="table">
					<tbody>
						<tr>
							<th>{% trans %}Name{% endtrans %}</th>
							<td>{{ program.name }}</td>
						</tr>
						<tr>
							<th>{% trans %}Description{% endtrans %}</th>
							<td>{{ program.description }}</td>
						</tr>
						<tr>
							<th>{% trans %}Stakeholders{% endtrans %}</th>
							<td>{{ program.stakeholders }}</td>
						</tr>
						<tr>
							<th>{% trans %}Amount{% endtrans %}</th>
							<td>{{ program.currency.abbreviation }} {{ program.amount }}</td>
						</tr>
						<tr>
							<th>{% trans %}Start Date{% endtrans %}</th>
							<td>{{ program.startDate ? program.startDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>{% trans %}End Date{% endtrans %}</th>
							<td>{{ program.endDate ? program.endDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>{% trans %}Objective{% endtrans %}</th>
							<td>{{ program.objective }}</td>
						</tr>
						<tr>
							<th>{% trans %}Status{% endtrans %}</th>
							<td>
								{% if program.status == 1 %}
									Active
								{% else %}
									Closed
								{% endif %}
							</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('program_edit', {'id': program.id}) }}" class="btn btn-warning text-white">{% trans %}Edit{% endtrans %}</a> {{ include('program/_delete_form.html.twig') }}
			</div>
		</div>
		<br>
	{% endif %}


	<div class="card">
		<div class="card-header border-0">
			<h3 class="card-title">Projects</h3>
			<div class="card-tools">
				<a href="#" class="btn btn-tool btn-sm">
					<i class="fas fa-bars"></i>
				</a>
			</div>
		</div>
		<div class="card-body table-responsive p-0">
			<table class="table table-striped table-valign-middle">
				<thead>
					<tr>
						<th>Name</th>
						<th>Amount</th>
						<th>Start Date</th>
						<th>End Date</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for project in projects %}
						<tr>
							<td>
								<a href="{{ path('project_show', {'id': project.id })}}">{{ project.name }}</a>
							</td>
							<td>{{ project.currency.abbreviation }} {{ project.amount }}</td>
							<td>{{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</td>
							<td>{{ project.endDate ? project.endDate|date('Y-m-d') : '' }}</td>
							<td class="text-center">
								<a href="{{ path('project_dashboard', {'id': project.id })}}" class="btn btn-sm btn-primary mr-2">{% trans %}Dashboard{% endtrans %}</a>
								<a href="#" class="btn btn-sm btn-success mr-2">{% trans %}Milestone{% endtrans %}</a>
								<a href="{{ path('project_resource_index', {'project': project.id })}}" class="btn btn-sm btn-warning">{% trans %}Resources{% endtrans %}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
