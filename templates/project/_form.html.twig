{{ form_start(form) }}
<div class="row">
	<div class="form-group col-md-6">
		<label>{{ form_label(form.name) }}</label>
		{{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-3">
		<label>{{ form_label(form.amount) }}</label>
		{{ form_widget(form.amount,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-3">
		<label>{{ form_label(form.currency) }}</label>
		{{ form_widget(form.currency,{'attr':{'class':'form-control select2'}}) }}
		<div class="help-block with-errors"></div>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-4">
		<label>{{ form_label(form.unit) }}</label>
		{{ form_widget(form.unit,{'attr':{'class':'form-control select2'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-4">
		<label>{{ form_label(form.project_manager) }}</label>
		{{ form_widget(form.project_manager,{'attr':{'class':'form-control select2'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-4">
		<label>{{ form_label(form.program) }}</label>
		{{ form_widget(form.program,{'attr':{'class':'form-control select2'}}) }}
		<div class="help-block with-errors"></div>
	</div>
</div>
<div class="form-group">
	<label>{{ form_label(form.description) }}</label>
	{{ form_widget(form.description,{'attr':{'class':'form-control wyiswig'}}) }}
	<div class="help-block with-errors"></div>
</div>
	<div class="form-group">
		<label>{{ form_label(form.outcome) }}</label>
		{{ form_widget(form.outcome,{'attr':{'class':'form-control wyiswig'}}) }}
		<div class="help-block with-errors"></div>
	</div>
<div class="row">
	<div class="form-group col-md-6">
		<label>{{ form_label(form.stakeholder) }}</label>
		{{ form_widget(form.stakeholder,{'attr':{'class':'form-control select2', 'multiple':'multiple'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-3">
		<label>{{ form_label(form.baseline) }}</label>
		{{ form_widget(form.baseline,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-4">
		<label>{{ form_label(form.start_date) }}</label>
		{{ form_widget(form.start_date,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-md-4">
		<label>{{ form_label(form.end_date) }}</label>
		{{ form_widget(form.end_date,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
</div><br>
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
