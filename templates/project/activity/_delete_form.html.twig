{% if is_granted("project_activity_delete") %}
<form method="post" class="d-inline" action="{{ path('project_activity_delete', {'id': project_activity.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project_activity.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>
{% endif %}