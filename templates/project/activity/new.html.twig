{% extends 'base.html.twig' %}

{% block title %}New Project Activity
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">
			{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_activity_index', {'project': project.id})}}">{% trans %}
			Project Activity
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		New
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	New Project Activity
	{% endtrans %}
{% endblock %}
{% block body %}
	{% if is_granted("project_activity_create") %}
		<div class="card card-info">
			<div class="card-header">
				<h5>{% trans %}
					New Project Activity{% endtrans %}</h5>
			</div>
			<div class="card-body">
				{{ include('project/activity/_form.html.twig') }}
			</div>
		</div>
		<br>
	{% endif %}
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/plugins/summernote/summernote-bs4.min.css') }}">
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/plugins/summernote/summernote-bs4.min.js') }}"></script>
<script>
  $(function () {
    $('.wyiswig').summernote({
		placeholder: 'Enter details here',
        tabsize: 2,
        height: 200
	})
  })
</script>
{% endblock %}