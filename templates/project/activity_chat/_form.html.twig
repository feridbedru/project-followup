{{ form_start(form) }}
    <div class="form-group col-md-12">
        <label>{{ form_label(form.topic) }}</label>
        {{ form_widget(form.topic,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.content) }}</label>
        {{ form_widget(form.content,{'attr':{'class':'form-control wyiswig'}}) }}
