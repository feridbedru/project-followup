{% extends 'base.html.twig' %}

{% block title %}Activity Collaboration
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">
			{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_activity_index', {'project': project.id})}}">{% trans %}
			Activity
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Collaboration
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Activity Collaboration{% endtrans %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-4">
			{% if is_granted("activity_chat_create") %}
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">
							{% if edit %}
								Edit
							{% else %}
								Add New
							{% endif %}
						</h3>
					</div>
					<div class="card-body">
						{% if edit  %}
							{% set button_label = 'Update' %}
						{% endif %}
						{{ include('project/activity_chat/_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
		<div class="col-md-8">
			<div class="card card-info">
				<div class="card-header">
					<h3 class="card-title">{% trans %}
						Activity Collaboration
						{% endtrans %}</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>{{ knp_pagination_sortable(activity_chats, 'Topic'|trans, 'a.topic') }}</th>
								<th>{{ knp_pagination_sortable(activity_chats, 'Content'|trans, 'a.content') }}</th>
								<th>{% trans %}Actions{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% set i = 1 %}
							{% for activity_chat in activity_chats %}
								<tr>
									<td>{{ i }}
										{% set i = i+1 %}
									</td>
									<td>{{ activity_chat.topic }}</td>
									<td>{{ activity_chat.content }}</td>
									<td>

										{% if is_granted("activity_chat_edit") %}
											<form class="d-inline" method="post">
												<input type="hidden" name="edit" value="{{activity_chat.id}}">
												<button class="btn btn-info btn-sm" title="Edit">
													<i class="fa fa-edit"></i>
												</button>
											</form>
										{% endif %}
										{% if is_granted("activity_chat_delete") %}
											<form method="post" class="d-inline" action="{{ path('activity_chat_delete', {'id': activity_chat.id, 'activity': activity.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity_chat.id) }}">
												<button class="btn btn-danger btn-sm">
													<span class="fa fa-trash"></span>
												</button>
											</form>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">{% trans %}no records found{% endtrans %}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(activity_chats) }}</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
