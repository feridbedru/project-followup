{{ form_start(form) }}
    <div class="form-group col-md-12">
        <label>{{ form_label(form.title) }}</label>
        {{ form_widget(form.title,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.description) }}</label>
        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.file) }}</label>
        {{ form_widget(form.file,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.is_public) }}</label>
        {{ form_widget(form.is_public,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
{% if not button_label is defined  %}
    <button class="btn btn-info">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning mr-3" type="reset">Reset</button>

{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <a href="{{ path('activity_files_index', {'activity': activity.id, 'project': project.id }) }}" class="btn btn-primary">
        Cancel
    </a>

    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
{% endif %}
{{ form_end(form) }}