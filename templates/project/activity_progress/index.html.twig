{% extends 'base.html.twig' %}

{% block title %}Activity Progress
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">
			{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_activity_index', {'project': project.id})}}">{% trans %}
			Activity
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Progress
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Activity Progress{% endtrans %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-4">
			{% if is_granted("activity_progress_create") %}
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">
							{% if edit %}
								Edit
							{% else %}
								Add New
							{% endif %}
						</h3>
					</div>
					<div class="card-body">
						{% if edit  %}
							{% set button_label = 'Update' %}
						{% endif %}
						{{ include('project/activity_progress/_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
		<div class="col-md-8">
			<div class="card card-info">
				<div class="card-header">
					<h3 class="card-title">{% trans %}
						Activity Progress
						{% endtrans %}</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>{{ knp_pagination_sortable(activity_progresses, 'Employee'|trans, 'a.createdBy') }}</th>
								<th>{{ knp_pagination_sortable(activity_progresses, 'Content'|trans, 'a.content') }}</th>
								<th>{{ knp_pagination_sortable(activity_progresses, 'File'|trans, 'a.file') }}</th>
								<th>{{ knp_pagination_sortable(activity_progresses, 'Reported At'|trans, 'a.createdAt') }}</th>
								<th>{% trans %}Actions{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% set i = 1 %}
							{% for activity_progress in activity_progresses %}
								<tr>
									<td>{{ i }}
										{% set i = i+1 %}
									</td>
									<td>{{ activity_progress.createdBy }}</td>
									<td>{{ activity_progress.content|raw }}</td>
									<td><a href="{{ asset('upload/progress/')}}{{ activity_progress.file }}" target="_blank" class="btn btn-sm btn-primary">View File</a></td>
									<td>{{ activity_progress.createdAt ? activity_progress.createdAt|date('Y-m-d') : '' }}</td>
									<td>

										{% if is_granted("activity_progress_edit") %}
											<form class="d-inline" method="post">
												<input type="hidden" name="edit" value="{{activity_progress.id}}">
												<button class="btn btn-info btn-sm" title="Edit">
													<i class="fa fa-edit"></i>
												</button>
											</form>
										{% endif %}
										{% if is_granted("activity_progress_delete") %}
											<form method="post" class="d-inline" action="{{ path('activity_progress_delete', {'id': activity_progress.id, 'activity': activity.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity_progress.id) }}">
												<button class="btn btn-danger btn-sm">
													<span class="fa fa-trash"></span>
												</button>
											</form>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">{% trans %}no records found{% endtrans %}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(activity_progresses) }}</div>
				</div>
			</div>
		      <div class="">

        <!-- Timelime example  -->
        <div class="row">
          <div class="col-md-12">
            <!-- The time line -->
            <div class="timeline">
              <!-- timeline time label -->
              <div class="time-label">
                <span class="bg-green">10 Feb. 2014</span>
              </div>
              <!-- /.timeline-label -->
              <!-- timeline item -->
              <div>
                <i class="fas fa-user bg-green"></i>
                <div class="timeline-item">
                  <span class="time"><i class="fas fa-clock"></i> 12:05</span>
                  <h3 class="timeline-header"><a href="#">Person Name</a>'s progress report</h3>

                  <div class="timeline-body">
                    <p><i class="fas fa-calendar text-success"></i> </p>
                    <p><i class="fas fa-star-half-alt text-success"></i></p>
                    <p><i class="fas fa-sticky-note text-success"></i></p>
					<p>Report </p>
                  </div>
                  <div class="timeline-footer">
                    <a class="btn btn-primary btn-sm">File</a>
                    <a class="btn btn-warning btn-sm">Edit</a>
                    <a class="btn btn-danger btn-sm">Delete</a>
                  </div>
                </div>
              </div>
              <!-- END timeline item -->

              <div>
                <i class="fas fa-clock bg-gray"></i>
              </div>
            </div>
          </div>
          <!-- /.col -->
        </div>
      </div>
		</div>
	</div>
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/plugins/summernote/summernote-bs4.min.css') }}">
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/plugins/summernote/summernote-bs4.min.js') }}"></script>
<script>
  $(function () {
    $('.wyiswig').summernote({
		placeholder: 'Enter details here',
        tabsize: 2,
        height: 100
	})
  })
</script>
{% endblock %}