{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{path('project_index')}}">{% trans %} Project {% endtrans %}</a>
</li>
<li class="breadcrumb-item active">{% trans %} Edit {% endtrans %}</li>
{% endblock %}
{% block pagetitle %}{% trans %} Edit Project{% endtrans %}
{% endblock %}
{% block body %}
{% if is_granted("project_edit") %}
    <div class="card card-info">
        <div class="card-header">
            <h3>{% trans %} Edit Project {% endtrans %}</h3>
        </div>
        <div class="card-body">
            {{ include('project/_form.html.twig', {'button_label': 'Update' }) }}
            {{ include('project/_delete_form.html.twig') }}
        </div>
    </div>
<br>
{% endif %}
{% endblock %}