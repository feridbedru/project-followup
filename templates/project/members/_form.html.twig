{{ form_start(form) }}
    <div class="form-group col-md-12">
        <label class="control-label ">Employee</label>
        {{ form_widget(form.user,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label class="control-label no-padding-right">{{ form_label(form.role) }}</label>
        {{ form_widget(form.role,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label class="control-label no-padding-right">{{ form_label(form.status) }}</label>
        {{ form_widget(form.status,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label class="control-label no-padding-right">{{ form_label(form.is_working_on_task) }}</label>
        {{ form_widget(form.is_working_on_task,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
{% if not button_label is defined  %}
    <button class="btn btn-info">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning mr-3" type="reset">Reset</button>

{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <a href="{{ path('project_members_index', {'team': team.id, 'project': project.id }) }}" class="btn btn-primary">
        Cancel
    </a>

    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
{% endif %}
{{ form_end(form) }}