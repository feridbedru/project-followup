{% extends 'base.html.twig' %}

{% block title %}Edit Project Milestone{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{path('project_milestone_index', {'project': project.id})}}">{% trans %} Project Milestone {% endtrans %}</a>
</li>
<li class="breadcrumb-item active">{% trans %} Edit {% endtrans %}</li>
{% endblock %}
{% block pagetitle %}{% trans %} Edit Project Milestone{% endtrans %}
{% endblock %}
{% block body %}
{% if is_granted("project_milestone_edit") %}
    <div class="card card-info">
        <div class="card-header">
            <h3>{% trans %} Edit Project Milestone {% endtrans %}</h3>
        </div>
        <div class="card-body">
            {{ include('project/milestone/_form.html.twig', {'button_label': 'Update' }) }}
            {{ include('project/milestone/_delete_form.html.twig') }}
        </div>
    </div>
<br>
{% endif %}
{% endblock %}