{% extends 'base.html.twig' %}

{% block title %}Project Milestone
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Milestones
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Project Milestone{% endtrans %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-4">
			{% if is_granted("project_milestone_create") %}
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">
							{% if edit %}
								Edit
							{% else %}
								Add New
							{% endif %}
						</h3>
					</div>
					<div class="card-body">
						{% if edit  %}
							{% set button_label = 'Update' %}
						{% endif %}
						{{ include('project/milestone/_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
		<div class="col-md-8">
			<div class="card card-info">
				<div class="card-header">
					<h3 class="card-title">{% trans %}
						Project Milestone
						{% endtrans %}</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>{{ knp_pagination_sortable(project_milestones, 'Name'|trans, 'p.name') }}</th>
								<th>{{ knp_pagination_sortable(project_milestones, 'Description'|trans, 'p.description') }}</th>
								<th>{{ knp_pagination_sortable(project_milestones, 'Last Revision'|trans, 'p.last_revision') }}</th>
								<th>{{ knp_pagination_sortable(project_milestones, 'Tasks are Equal'|trans, 'p.tasks_are_equal') }}</th>
								<th>{% trans %}Actions{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% set i = 1 %}
							{% for project_milestone in project_milestones %}
								<tr>
									<td>{{ i }}
										{% set i = i+1 %}
									</td>
									<td>{{ project_milestone.name }}</td>
									<td>{{ project_milestone.description }}</td>
									<td>{{ project_milestone.lastRevision ? project_milestone.lastRevision|date('Y-m-d') : '' }}</td>
									<td>{{ project_milestone.tasksAreEqual ? 'Yes' : 'No' }}</td>
									<td>

										{% if is_granted("project_milestone_edit") %}
											<form class="d-inline" method="post">
												<input type="hidden" name="edit" value="{{project_milestone.id}}">
												<button class="btn btn-info btn-sm" title="Edit">
													<i class="fa fa-edit"></i>
												</button>
											</form>
										{% endif %}
										{% if is_granted("project_milestone_delete") %}
											<form method="post" class="d-inline" action="{{ path('project_milestone_delete', {'id': project_milestone.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project_milestone.id) }}">
												<button class="btn btn-danger btn-sm">
													<span class="fa fa-trash"></span>
												</button>
											</form>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="7">{% trans %}no records found{% endtrans %}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(project_milestones) }}</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
