{% extends 'base.html.twig' %}

{% block title %}Project Milestone
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_milestone_index',{'project': project.id})}}">{% trans %}
			Project Milestone
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Show
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Show Project Milestone
	{% endtrans %}
{% endblock %}
{% block body %}
	{% if is_granted("project_milestone_show") %}
		<div class="card card-info">
			<div class="card-header">
				<h3>{% trans %}
					Show Project Milestone
					{% endtrans %}</h3>
			</div>
			<div class="card-body">
				<table class="table">
					<tbody>
						<tr>
							<th>{% trans %}Name{% endtrans %}</th>
							<td>{{ project_milestone.name }}</td>
						</tr>
						<tr>
							<th>{% trans %}Description{% endtrans %}</th>
							<td>{{ project_milestone.description }}</td>
						</tr>
						<tr>
							<th>{% trans %}Last_revision{% endtrans %}</th>
							<td>{{ project_milestone.lastRevision ? project_milestone.lastRevision|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('project_milestone_edit', {'id': project_milestone.id, 'project': project}) }}" class="btn btn-warning text-white">{% trans %}Edit{% endtrans %}</a>
				{{ include('project/milestone/_delete_form.html.twig') }}
			</div>
		</div>
		<br>
	{% endif %}
{% endblock %}
