{{ form_start(form) }}
    <div class="form-group">
        <label>{{ form_label(form.title) }}</label>
        {{ form_widget(form.title,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="row">
    <div class="form-group col-md-6">
        <label>{{ form_label(form.resource_type) }}</label>
        {{ form_widget(form.resource_type,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-6">
        <label>{{ form_label(form.status) }}</label>
        {{ form_widget(form.status,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    </div>
    <div class="form-group">
        <label>{{ form_label(form.description) }}</label>
        {{ form_widget(form.description,{'attr':{'class':'form-control wyiswig'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <label>{{ form_label(form.file) }}</label>
        {{ form_widget(form.file,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="row">
    <div class="form-group col-md-6">
        <label>{{ form_label(form.is_public) }}</label>
        {{ form_widget(form.is_public,{'attr':{'class':''}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-6">
        <label>{{ form_label(form.is_pinned) }}</label>
        {{ form_widget(form.is_pinned,{'attr':{'class':''}}) }}
        <div class="help-block with-errors"></div>
    </div>
    </div>
{% if not button_label is defined  %}
    <button class="btn btn-primary mr-3">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning" type="reset">Reset</button>
{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
    <a href="{{ path('project_resource_index', {'project': project.id }) }}" class="btn btn-primary">
        Cancel
    </a>
{% endif %}
{{ form_end(form) }}