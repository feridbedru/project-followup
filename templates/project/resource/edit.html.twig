{% extends 'base.html.twig' %}

{% block title %}Edit Project Resource
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">
			{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_resource_index', {'project': project.id})}}">{% trans %}
			Resources
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Edit
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Edit Project Resource{% endtrans %}
{% endblock %}
{% block body %}
	{% if is_granted("project_resource_edit") %}
		<div class="card card-info">
			<div class="card-header">
				<h5>{% trans %}
					Edit Project Resource
					{% endtrans %}</h5>
			</div>
			<div class="card-body">
				{{ include('project/resource/_form.html.twig', {'button_label': 'Update' }) }}
				{{ include('project/resource/_delete_form.html.twig') }}
			</div>
		</div>
		<br>
	{% endif %}
{% endblock %}
