{% extends 'base.html.twig' %}

{% block title %}Project Sponsor
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_sponsor_index')}}">{% trans %}
			Project Sponsor
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		List
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{% trans %}
	Project Sponsor{% endtrans %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-4">
			{% if is_granted("project_sponsor_create") %}
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">
							{% if edit %}
								Edit
							{% else %}
								Add New
							{% endif %}
						</h3>
					</div>
					<div class="card-body">
						{% if edit  %}
							{% set button_label = 'Update' %}
						{% endif %}
						{{ include('project_sponsor/_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
		<div class="col-md-8">
			<div class="card card-info">
				<div class="card-header">
					<h3 class="card-title">{% trans %}
						Project Sponsor
						{% endtrans %}</h3>
					<div class="card-tools">
						<form class="form-inline ml-3">
							<div class="input-group input-group-sm">
								<input class="form-control form-control-navbar" placeholder="Search" type="search" name="search">
								<div class="input-group-append">
									<button class="btn btn-navbar" type="submit">
										<i class="fas fa-search"></i>
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>{{ knp_pagination_sortable(project_sponsors, 'Sponsor'|trans, 'p.sponsor') }}</th>
								<th>{% trans %}Actions{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% set i = 1 %}
							{% for project_sponsor in project_sponsors %}
								<tr>
									<td>{{ i }}
										{% set i = i+1 %}
									</td>
									<td>{{ project_sponsor.sponsor.name }}</td>
									<td>

										{% if is_granted("project_sponsor_edit") %}
											<form class="d-inline" method="post">
												<input type="hidden" name="edit" value="{{project_sponsor.id}}">
												<button class="btn btn-info btn-sm" title="Edit">
													<i class="fa fa-edit"></i>
												</button>
											</form>
										{% endif %}
										{% if is_granted("project_sponsor_delete") %}
											<form method="post" class="d-inline" action="{{ path('project_sponsor_delete', {'id': project_sponsor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project_sponsor.id) }}">
												<button class="btn btn-danger btn-sm">
													<span class="fa fa-trash"></span>
												</button>
											</form>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">{% trans %}no records found{% endtrans %}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(project_sponsors) }}</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
