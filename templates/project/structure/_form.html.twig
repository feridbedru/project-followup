{{ form_start(form) }}
    <div class="form-group">
        <label>{{ form_label(form.name) }}</label>
        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <label>{{ form_label(form.description) }}</label>
        {{ form_widget(form.description,{'attr':{'class':'form-control wyiswig'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <label>{{ form_label(form.reports_to) }}</label>
        {{ form_widget(form.reports_to,{'attr':{'class':'form-control select2'}}) }}
        <div class="help-block with-errors"></div>
    </div>
{% if not button_label is defined  %}
    <button class="btn btn-primary mr-3">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning" type="reset">Reset</button>
{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
    <a href="{{ path('project_structure_index', {'project': project.id }) }}" class="btn btn-primary">
        Cancel
    </a>
{% endif %}
{{ form_end(form) }}