{% extends 'base.html.twig' %}

{% block title %}Teams
{% endblock %}
{% block breadcrumb %}
	<li class="breadcrumb-item">
		<a href="{{path('project_index')}}">
			{% trans %}
			Projects
			{% endtrans %}</a>
	</li>
	<li class="breadcrumb-item">
		<a href="{{path('project_show', {'id': project.id})}}">{{ project.name }}
		</a>
	</li>
	<li class="breadcrumb-item active">{% trans %}
		Teams
		{% endtrans %}</li>
{% endblock %}
{% block pagetitle %}
	{{ project.name }}
	{% trans %}
	Teams{% endtrans %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-4">
			{% if is_granted("project_team_create") %}
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">
							{% if edit %}
								Edit
							{% else %}
								Add New
							{% endif %}
							{% trans %}
							Team{% endtrans %}
						</h3>
					</div>
					<div class="card-body">
						{% if edit  %}
							{% set button_label = 'Update' %}
						{% endif %}
						{{ include('project/team/_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
		<div class="col-md-8">
			<div class="card card-info">
				<div class="card-header">
					<h3 class="card-title">{% trans %}
						Teams List
						{% endtrans %}</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>{{ knp_pagination_sortable(project_teams, 'Name'|trans, 'p.name') }}</th>
								<th>{% trans %}
									Total
									{% endtrans %}</th>
								<th>{{ knp_pagination_sortable(project_teams, 'Description'|trans, 'p.description') }}</th>
								<th>{% trans %}Actions{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% set i = 1 %}
							{% for project_team in project_teams %}
								<tr>
									<td>{{ i }}
										{% set i = i+1 %}
									</td>
									<td>{{ project_team.name }}</td>
									<td>{{ project_team.projectMembers|length }}</td>
									<td>{{ project_team.description }}</td>
									<td>
										{% if is_granted("project_member_index") %}
											<a href="{{ path('project_members_index', {'team': project_team.id,'project': project.id}) }}" class="btn btn-sm btn-success">{% trans %}Members{% endtrans %}</a>
										{% endif %}
										{% if is_granted("project_team_edit") %}
											<form class="d-inline" method="post">
												<input type="hidden" name="edit" value="{{project_team.id}}">
												<button class="btn btn-info btn-sm" title="Edit">
													<i class="fa fa-edit"></i>
												</button>
											</form>
										{% endif %}
										{% if is_granted("project_team_delete") %}
											<form method="post" class="d-inline" action="{{ path('project_team_delete', {'id': project_team.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project_team.id) }}">
												<button class="btn btn-danger btn-sm">
													<span class="fa fa-trash"></span>
												</button>
											</form>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">{% trans %}no records found{% endtrans %}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(project_teams) }}</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
