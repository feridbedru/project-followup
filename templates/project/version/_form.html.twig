{{ form_start(form) }}
<div class="form-group col-md-12">
	<label>{{ form_label(form.version) }}</label>
	{{ form_widget(form.version,{'attr':{'class':'form-control'}}) }}
	<div class="help-block with-errors"></div>
</div>
<div class="form-group col-md-12">
	<label>{{ form_label(form.description) }}</label>
	{{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
	<div class="help-block with-errors"></div>
</div>
<div class="form-group col-md-12">
	<label>{{ form_label(form.released_date) }}</label>
	{{ form_widget(form.released_date,{'attr':{'class':'form-control'}}) }}
	<div class="help-block with-errors"></div>
</div>
{% if not button_label is defined  %}
	<button class="btn btn-info">{{ button_label|default('Save') }}</button>
	<button class="btn  btn-warning mr-3" type="reset">Reset</button>

{% else %}
	<input type="hidden" name="edit" value="{{ edit }}">
	<a href="{{ path('project_version_index') }}" class="btn btn-primary">
		Cancel
	</a>

	<br><button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
{% endif %}
{{ form_end(form) }}
