{% extends 'base.html.twig' %}

{% block title %}Edit Report{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{path('report_index')}}">{% trans %} Report {% endtrans %}</a>
</li>
<li class="breadcrumb-item active">{% trans %} Edit {% endtrans %}</li>
{% endblock %}
{% block pagetitle %}{% trans %} Edit Report{% endtrans %}
{% endblock %}
{% block body %}
{% if is_granted("report_edit") %}
    <div class="card card-info">
        <div class="card-header">
            <h5>{% trans %} Edit Report {% endtrans %}</h5>
        </div>
        <div class="card-body">
            {{ include('report/_form.html.twig', {'button_label': 'Update' }) }}
            {{ include('report/_delete_form.html.twig') }}
        </div>
    </div>
<br>
{% endif %}
{% endblock %}