{{ form_start(form) }}
    <div class="form-group col-md-12">
        <label>{{ form_label(form.name) }}</label>
        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.acronym) }}</label>
        {{ form_widget(form.acronym,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.head) }}</label>
        {{ form_widget(form.head,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group col-md-12">
        <label>{{ form_label(form.reportsTo) }}</label>
        {{ form_widget(form.reportsTo,{'attr':{'class':'form-control'}}) }}
        <div class="help-block with-errors"></div>
    </div>
{% if not button_label is defined  %}
    <button class="btn btn-primary mr-3">{{ button_label|default('Save') }}</button>
    <button class="btn  btn-warning" type="reset">Reset</button>
{% else %}
    <input type="hidden" name="edit" value="{{ edit }}">
    <button class="btn btn-success mr-2">{{ button_label|default('Save') }}</button>
    <a href="{{ path('organization_unit_index', {'organization': organization.id}) }}" class="btn btn-primary">
        Cancel
    </a>
{% endif %}
{{ form_end(form) }}