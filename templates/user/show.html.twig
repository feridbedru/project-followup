{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{path('user_index')}}">{% trans %} User {% endtrans %}</a>
</li>
<li class="breadcrumb-item active">{% trans %} Show {% endtrans %}</li>
{% endblock %}
{% block pagetitle %}{% trans %} Show User {% endtrans %}
{% endblock %}
{% block body %}
{% if is_granted("user_show") %}
    <div class="card card-info">
        <div class="card-header">
            <h5>{% trans %} Show User {% endtrans %}</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                                            <tr>
                            <th>{% trans %}Email{% endtrans %}</th>
                            <td>{{ user.email }}</td>
                        </tr>
                                            <tr>
                            <th>{% trans %}IsActive{% endtrans %}</th>
                            <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                        </tr>
                                
                                            <tr>
                            <th>{% trans %}Status{% endtrans %}</th>
                            <td>{{ user.status }}</td>
                        </tr>
                                            <tr>
                            <th>{% trans %}Photo{% endtrans %}</th>
                            <td>{{ user.photo }}</td>
                        </tr>
                                            <tr>
                            <th>{% trans %}Phone{% endtrans %}</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                                            <tr>
                            <th>{% trans %}Position{% endtrans %}</th>
                            <td>{{ user.position }}</td>
                        </tr>
                                            <tr>
                            <th>{% trans %}Full name{% endtrans %}</th>
                            <td>{{ user.fullName }}</td>
                        </tr>
                                    </tbody>
            </table>

            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning text-white">{% trans %}Edit{% endtrans %}</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
<br>
{% endif %}
{% endblock %}