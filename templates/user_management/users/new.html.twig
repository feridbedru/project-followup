{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{path('user_index')}}">{% trans %} User {% endtrans %}</a>
</li>
<li class="breadcrumb-item active">{% trans %} New {% endtrans %}</li>
{% endblock %}
{% block pagetitle %}{% trans %} New User {% endtrans %}
{% endblock %}
{% block body %}
{% if is_granted("user_create") %}
    <div class="card card-info">
        <div class="card-header">
            <h5>{% trans %} New User{% endtrans %}</h5>
        </div>
        <div class="card-body">
            {{ include('user_management/users/_form.html.twig') }}
        </div>
    </div>
<br>
{% endif %}
{% endblock %}