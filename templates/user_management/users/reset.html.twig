{% extends 'security/login.html.twig' %}

{% block body %}
	<div class="card">
		<div class="card-body login-card-body">
			<p class="login-box-msg">{% trans %}You forgot your password? Here you can easily retrieve a new password.{% endtrans %}</p>
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="row alert alert-{{ label }} alert-dismissible">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
						<h4 class="mr-4">
							<i class="icon fa fa-{% if label=='success' %}check {% else %}ban {% endif %}"></i>
							{% trans %}Alert{% endtrans %}!</h4>
						{{ message }}
					</div>

				{% endfor %}
			{% endfor %}
			{% if form is defined %}
				{{ form_start(form,{'attr': {'role':'form'}}) }}
				<div class="input-group mb-3">
					{{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Username'}}) }}
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-user"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<button type="submit" class="btn btn-primary btn-block">{% trans %}Request new password{% endtrans %}</button>
					</div>
				</div>

				{{ form_end(form) }}
			{% endif %}
			<p class="mt-3 mb-1">
				<a href="{{ path('app_login')}}" class="nav-link">{% trans %}Login{% endtrans %}</a>
			</p>
		</div>
	</div>

{% endblock %}